<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TableLayout
        android:layout_width="261dp"
        android:layout_height="155dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/geomagneticAccLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Geomagnetic accuracy" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/geomagneticAcc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Unreliable" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/gravityAccLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Accelerometer accuracy" />

            <Space
                android:layout_width="54dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/gravityAcc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView" />
        </TableRow>

    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>